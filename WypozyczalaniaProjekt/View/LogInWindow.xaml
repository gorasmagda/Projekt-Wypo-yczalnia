<Window x:Class="WypozyczalaniaProjekt.View.LogInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WypozyczalaniaProjekt.View" 
        xmlns:vm="clr-namespace:WypozyczalaniaProjekt.ViewModel"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        mc:Ignorable="d"
        Title="LOGOWANIE DO APLIKACJI" Height="450" Width="800">

    <Window.Resources>
        <vm:LogInViewModel x:Key="LogInVM"/>
    </Window.Resources>

    <Grid DataContext="{StaticResource LogInVM}" Background="#594c8f">

        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="1" 
                   Grid.ColumnSpan="2"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Text="LOGOWANIE" 
                   Foreground="White" 
                   FontSize="26" 
                   FontWeight="Bold"/>

        <Button Grid.Row="2" Grid.Column="1" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Width="100" Height="25" 
                Content="Wyczyść"
                Command="{Binding WyczyscClick}"/>

        <Button Grid.Row="2" Grid.Column="2" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Width="100" Height="25" 
                Content="Zaloguj"
                Command="{Binding ZalogujClick}"/>

        <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Background="#6d6394">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2.7*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="1" Grid.Column="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" 
                       Text="Login" 
                       Foreground="White" 
                       FontSize="16"/>
            
            <TextBox x:Name="loginBox" 
                     Grid.Row="1" Grid.Column="2" 
                     HorizontalAlignment="Left"  
                     VerticalAlignment="Center" 
                     Background="LightGray"
                     Width="115" Height="21"
                     Text="{Binding Login}"/>

            <TextBlock Grid.Row="2" Grid.Column="1" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Text="Hasło" 
                       Foreground="White" 
                       FontSize="16"/>
            
            <TextBox x:Name="hasloBox" 
                     Grid.Row="2" Grid.Column="2" 
                     HorizontalAlignment="Left"  
                     VerticalAlignment="Center" 
                     Background="LightGray" 
                     Width="115" Height="21"
                     Text="{Binding Haslo}"/>
        </Grid>
    </Grid>
</Window>
